<Window x:Class="MvvmApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        xmlns:local="clr-namespace:MvvmApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="345.697" Width="525">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="272" VerticalAlignment="Top" ItemsSource="{Binding Path=ObservableCollectionPerson}"  Width="517">

        </DataGrid>
        <Button Content="Add one more" HorizontalAlignment="Left" Margin="298,277,0,0" VerticalAlignment="Top" Width="97" Command="{Binding AddCommand}"/>
        <Button Content="Delete first" HorizontalAlignment="Left" Margin="410,277,0,0" VerticalAlignment="Top" Width="97" Command="{Binding DeleteCommand}" IsEnabled="{Binding ObservableCollectionPerson.Count, Mode=OneWay}" />

    </Grid>
</Window>
