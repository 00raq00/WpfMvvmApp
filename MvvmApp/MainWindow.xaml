<Window x:Class="MvvmApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        xmlns:local="clr-namespace:MvvmApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="345.697" Width="525">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <DataGrid ItemsSource="{Binding Path=ObservableCollectionPerson, Mode=TwoWay}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,0,43"/>
        <Button Content="Add one more" Margin="0,0,122,18" Command="{Binding AddCommand}" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="97"/>
        <Button Content="Delete one" Margin="0,0,10,18" Command="{Binding DeleteCommand}" IsEnabled="{Binding ObservableCollectionPerson.Count, Mode=OneWay}" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="97" />

    </Grid>
</Window>
